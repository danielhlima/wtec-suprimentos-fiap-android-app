<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    tools:context=".view.fragments.ClassifyCustomerFragment">

    <LinearLayout
        android:id="@+id/ll_progressBar_classify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#000000"
        android:alpha="0.6"
        android:gravity="center"
        android:visibility="invisible">

<!--        <ProgressBar-->
<!--            style="?android:attr/progressBarStyle"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:visibility="visible" />-->

        <com.agrawalsuneet.dotsloader.loaders.AllianceLoader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:alliance_animDuration="500"
            app:alliance_distanceMultiplier="4"
            app:alliance_dotsRadius="20dp"
            app:alliance_drawOnlyStroke="true"
            app:alliance_firstDotsColor="@color/primaryLightColor"
            app:alliance_secondDotsColor="@color/primaryDarkColor"
            app:alliance_strokeWidth="8dp"
            app:alliance_thirdDotsColor="@color/primaryColor" />

    </LinearLayout>



    <ScrollView
        android:id="@+id/sv_form_classify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/nome"/>

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/nome_hint"
                android:textColor="@color/primaryDarkColor"
                android:importantForAutofill="no" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/maior_atraso"/>

            <EditText
                android:id="@+id/editTextMaiorAtraso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="number"
                android:hint="@string/maior_atraso"
                android:textColor="@color/primaryDarkColor"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/titulos_em_aberto"/>

            <faranjit.currency.edittext.CurrencyEditText
                android:id="@+id/editTextTitulosEmAberto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="@string/titulos_em_aberto"
                app:groupDivider="."
                app:monetaryDivider=","
                app:locale="en_US"
                app:showSymbol="true"
                android:textColor="@color/primaryDarkColor"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/faturamento_bruto"/>

            <faranjit.currency.edittext.CurrencyEditText
                android:id="@+id/editTextFaturamentoBruto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="@string/faturamento_bruto"
                android:textColor="@color/primaryDarkColor"
                app:groupDivider="."
                app:monetaryDivider=","
                app:locale="en_US"
                app:showSymbol="true"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/margem_bruta"/>

            <faranjit.currency.edittext.CurrencyEditText
                android:id="@+id/editTextMargemBruta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="@string/margem_bruta"
                android:textColor="@color/primaryDarkColor"
                app:groupDivider="."
                app:monetaryDivider=","
                app:locale="en_US"
                app:showSymbol="true"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/periodo_demonstrativo_em_meses"/>

            <EditText
                android:id="@+id/editTextPeriodoDemonstrativoEmMeses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="number"
                android:hint="@string/periodo_demonstrativo_em_meses"
                android:textColor="@color/primaryDarkColor"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/custos"/>

            <faranjit.currency.edittext.CurrencyEditText
                android:id="@+id/editTextCustos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="@string/custos"
                app:groupDivider="."
                app:monetaryDivider=","
                app:locale="en_US"
                app:showSymbol="true"
                android:textColor="@color/primaryDarkColor"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/ano_fundacao"/>

            <EditText
                android:id="@+id/editTextAnoFundacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="number"
                android:hint="@string/ano_fundacao"
                android:textColor="@color/primaryDarkColor"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/capital_social"/>

            <faranjit.currency.edittext.CurrencyEditText
                android:id="@+id/editTextCapitalSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="@string/capital_social"
                app:groupDivider="."
                app:monetaryDivider=","
                app:locale="en_US"
                app:showSymbol="true"
                android:textColor="@color/primaryDarkColor"
                android:importantForAutofill="no" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/score_pontualidade"/>

            <EditText
                android:id="@+id/editTextNumberScorePontualidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="@string/score_pontualidade"
                android:textColor="@color/primaryDarkColor"
                android:importantForAutofill="no"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/prazo_medio_recebimento_vendas"/>

            <EditText
                android:id="@+id/editTextPrazoMedioRecebimentoVendas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="@string/prazo_medio_recebimento_vendas"
                android:textColor="@color/primaryDarkColor"
                android:importantForAutofill="no"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/limite_empresa_analise_de_credito"/>

            <faranjit.currency.edittext.CurrencyEditText
                android:id="@+id/editTextLimiteEmpresaAnaliseCredito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="@string/limite_empresa_analise_de_credito"
                android:textColor="@color/primaryDarkColor"
                android:importantForAutofill="no"
                app:groupDivider="."
                app:monetaryDivider=","
                app:locale="en_US"
                app:showSymbol="true"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/margem_bruta_acumulada"/>

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/editTextMargemBrutaAcumulada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                app:mask="0.__%"
                app:maskCharacter="_"
                android:text="0.00%"
                app:maskStyle="persistent"
                android:importantForAutofill="no"
                android:textColor="@color/primaryDarkColor"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:text="@string/diferenca_percentual_risco" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/editTextDiferencaPercentualRisco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                app:mask="0.__%"
                app:maskCharacter="_"
                android:text="0.00%"
                app:maskStyle="persistent"
                android:importantForAutofill="no"
                android:textColor="@color/primaryDarkColor"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:text="@string/percentual_risco" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/editTextPercentualRisco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                app:mask="0.__%"
                app:maskCharacter="_"
                android:text="0.00%"
                app:maskStyle="persistent"
                android:importantForAutofill="no"
                android:textColor="@color/primaryDarkColor"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:text="@string/risco" />

            <RadioGroup
                android:id="@+id/radioGroupRisco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/radioButtonAltoRisco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primaryDarkColor"
                    android:text="@string/risco_alto" />

                <RadioButton
                    android:id="@+id/radioButtonMedioRisco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primaryDarkColor"
                    android:text="@string/risco_medio" />

                <RadioButton
                    android:id="@+id/radioButtonBaixoRisco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primaryDarkColor"
                    android:text="@string/risco_baixo" />

                <RadioButton
                    android:id="@+id/radioButtonMuitoBaixoRisco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primaryDarkColor"
                    android:checked="true"
                    android:text="@string/risco_muito_baixo" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:text="@string/empresa_me" />

            <RadioGroup
                android:id="@+id/radioGroupEmpresaME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/radioButtonEmpresaMESim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primaryDarkColor"
                    android:checked="true"
                    android:text="@string/sim" />

                <RadioButton
                    android:id="@+id/radioButtonEmpresaMENao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primaryDarkColor"
                    android:text="@string/nao" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@color/primarySoftBackgroundColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:text="@string/tem_restricao" />

            <RadioGroup
                android:id="@+id/radioGroupRestricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/radioButtonRestricaoSim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primaryDarkColor"
                    android:text="@string/sim" />

                <RadioButton
                    android:id="@+id/radioButtonRestricaoNao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primaryDarkColor"
                    android:checked="true"
                    android:text="@string/nao" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/bt_classify_customers"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="70dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="@string/cadastrar_e_classificar" />

        </LinearLayout>
    </ScrollView>



</FrameLayout>